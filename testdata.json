{
    "url": "https://konnect-net.sobold.dev/",
    "screensizes": ["tablet"],
    "locators": [
        {
            "testName": "Text Block Test",
            "type": "xpath",
            "value": "//section[@class='heading back-white-1 grey-1 heading--margin ']",
            "assertions": [
                {
                    "name": "Visibility",
                    "type": "isVisible",
                    "expectedValue": true
                }
            ]
        },
        {
            "testName": "Text Block Test Font size",
            "type": "xpath",
            "value": "//h2[contains(text(),'We help businesses that need to exchange data in a')]",
            "assertions": [
                {
                    "name": "Element Visibility",
                    "type": "isVisible",
                    "expectedValue": true
                },
                {
                    "name": "Element Class chcek",
                    "type": "value",
                    "value": "class",
                    "expectedValue": "heading__text-content h4 mx-auto col-12 col-sm-12 col-md-10 col-lg-8 col-xl-8"
                },
                {
                    "name": "Element Font Size check",
                    "type": "cssValue",
                    "value": "margin-right",
                    "expectedValue": "25px"
                }
            ]
        }
    ]
}
